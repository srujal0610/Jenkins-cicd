<odoo>
    <record id="view_school_subjects_form" model="ir.ui.view">
        <field name="name">Subjects</field>
        <field name="model">school.subjects</field>
        <field name="arch" type="xml">
            <form string="Subjects">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Name"/>
                            <field name="teacher_ids" string="Teachers"/>
                            <field name="grade_ids" string="Grades"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="action_school_subjects" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school.subjects</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Create a new subject record
            </p>
        </field>
    </record>

    <menuitem id="menu_school_subjects" name="Subjects" parent="school_management_menu" action="action_school_subjects" sequence="20"/>
</odoo>