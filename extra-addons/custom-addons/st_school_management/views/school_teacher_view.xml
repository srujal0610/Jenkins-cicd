<odoo>
    <record id="view_school_teacher_form" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teachers">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Teacher Name"/>
                            <field name="subject_id" string="Subject"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Create a new teacher record
            </p>
        </field>
    </record>

    <menuitem id="menu_school_teacher" name="Teachers" parent="school_management_menu" action="action_school_teacher" sequence="20"/>
</odoo>