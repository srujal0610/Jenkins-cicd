<odoo>

    <record id="view_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <group>
                        <field name="grade" string="Grade"/>
                        <field name="student_ids" widget="one2many"/>
                        <field name="teacher_id"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_class_list" model="ir.ui.view">
        <field name="name">school.class.list</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <list string="Class">
                <field name="grade" string="Grade"/>
            </list>
        </field>
    </record>

    <odoo>

    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>
</odoo>

    <menuitem id="menu_school_class" name="Classes" parent="school_management_menu" action="action_school_class"/>
</odoo>
