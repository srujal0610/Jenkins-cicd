<odoo>
    <data>

        <record id="view_student_reports_form" model="ir.ui.view">
            <field name="name">student.reports</field>
            <field name="model">school.student.reports</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="student_id" string="Student Name"/>

                        <field name="maths_marks"/>
                        <field name="maths_total_marks"/>
                        <field name="chemistry_marks"/>
                        <field name="chemistry_total_marks"/>
                        <field name="physics_marks"/>
                        <field name="physics_total_marks"/>
                        <field name="total_marks"/>
                        <field name="percentage"/>

                    </group>

                </form>

            </field>
        </record>

        <record id="action_report_cards" model="ir.actions.act_window">
        <field name="name">Reports</field>
        <field name="res_model">school.student.reports</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Create a new student report
            </p>
        </field>
    </record>

        <menuitem id="menu_school_student_reports" name="Report Cards" parent="school_management_menu" action="action_report_cards" sequence="70"/>
    </data>
</odoo>