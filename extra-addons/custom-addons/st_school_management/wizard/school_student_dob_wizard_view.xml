<odoo>

    <record id="view_change_dob_wizard_form" model="ir.ui.view">
        <field name="name">DOB Wizard</field>
        <field name="model">school.student.dob.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Date of Birth">
                <group>
                    <field name="student_id" invisible="1"/>
                    <field name="new_dob"/>
                </group>
                <footer>
                    <button string="Change DOB" type="object" name="change_dob" class="btn-primary"/>
                    <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>



    <record id="action_change_dob_wizard" model="ir.actions.act_window">
        <field name="name">Change Date of Birth</field>
        <field name="res_model">school.student.dob.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_student_id': active_id}</field>
    </record>
</odoo>
